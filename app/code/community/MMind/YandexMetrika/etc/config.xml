<?xml version="1.0"?>
<config>
    <modules>
        <MMind_YandexMetrika>
            <version>1.0.0</version>
        </MMind_YandexMetrika>
    </modules>
    <global>
        <blocks>
            <mmind_yandexmetrika>
                <class>MMind_YandexMetrika_Block</class>
            </mmind_yandexmetrika>
        </blocks>
        <helpers>
            <mmind_yandexmetrika>
                <class>MMind_YandexMetrika_Helper</class>
            </mmind_yandexmetrika>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <mmind_yandexmetrika>
                    <file>mmind_yandexmetrika.xml</file>
                </mmind_yandexmetrika>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <all>
                <title>Allow Everything</title>
            </all>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mmind_yandexmetrika>
                                            <title>MageMind YandexMetrika Integration</title>
                                        </mmind_yandexmetrika>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <mmind_yandexmetrika>
                    <files>
                        <default>MMind_YandexMetrika.csv</default>
                    </files>
                </mmind_yandexmetrika>
            </modules>
        </translate>
    </adminhtml>
</config>